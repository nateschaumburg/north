{{!--
Re-usable card for linking to posts
--}}

<article class="gh-card {{post_class}}">
    {{#if feature_image}}
    <figure class="gh-feature-image">
        <a href="{{url}}">
            <img
                srcset="{{img_url feature_image size="s"}} 300w,
                        {{img_url feature_image size="m"}} 600w,
                        {{img_url feature_image size="l"}} 1000w,
                        {{img_url feature_image size="xl"}} 2000w"
                sizes="(max-width: 1000px) 1000px, 2000px"
                loading="lazy"
                src="{{img_url feature_image size="xl"}}"
                alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
            />
        </a>
    </figure>
    {{/if}}

    <div class="content-wrap">
        <header class="entry-header gh-content gh-canvas">
            <div class="entry-meta">
                <span class="gh-card-meta entry-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD YYYY"}}</time> <span class="bull">&middot;</span> {{reading_time}}</span>
            </div>

            <h1 class="entry-title">{{{title}}}</h1>
        </header><!-- .entry-header -->

        <div class="entry-content gh-content gh-canvas">
            <p>{{excerpt}}</p>
        </div>

        <footer class="entry-footer post-footer gh-content gh-canvas">
            <a class="more-link" href="{{url}}">Read More</a>
        </footer>
    </div><!-- .content-wrapper -->
</article>