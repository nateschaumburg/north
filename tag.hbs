{{!< default}}

{{! The comment above "< default" means - insert everything in this file into
the {body} of the default.hbs template, which contains our header/footer. }}
<div class="page-wrap">
	<header class="tag-archive">
		<h3>{{tag.name}}</h3>

		<p>
			{{#if description}}
			{{description}}
			{{else}}
			A collection of {{plural ../pagination.total empty='posts' singular='% post' plural='% posts'}}
			{{/if}}
		</p>
	</header>

	{{! Each post will be output using this markup }}
	{{#foreach posts}}

	<article class="gh-card {{post_class}}">
		{{#if feature_image}}
		<figure class="gh-feature-image">
			<a href="{{url}}">
				<img
				srcset="{{img_url feature_image size="s"}} 300w,
				{{img_url feature_image size="m"}} 600w,
				{{img_url feature_image size="l"}} 1000w,
				{{img_url feature_image size="xl"}} 2000w"
				sizes="(max-width: 1000px) 1000px, 2000px"
				loading="lazy"
				src="{{img_url feature_image size="xl"}}"
				alt="{{#if feature_image_alt}}{{feature_image_alt}}{{else}}{{title}}{{/if}}"
				/>
			</a>
		</figure>
		{{/if}}

		<div class="content-wrap">
			<div class="gh-card-content">
				<div class="entry-header">
					<div class="entry-meta">
						<span class="gh-card-meta entry-meta"><time datetime="{{date format="YYYY-MM-DD"}}">{{date format="MMMM DD YYYY"}}</time> <span class="bull">&middot;</span> {{reading_time}}</span>
					</div>
					<h2 class="entry-title"><a href="{{url}}">{{{title}}}</a></h2>
				</div>

				<p>{{excerpt}}</p>

				<a class="more-link" href="{{url}}">Read more</a>
			</div>
		</div>
	</article>

	{{/foreach}}

	{{!! After all the posts, we have the previous/next pagination links }}
	{{pagination}}
</div>